nav.TopBar
  // background-color #F7B5CB //pink
  background-color rgb(250, 187, 0) // DeF yellow
  // background-color: #c41a18 // red
  border: 0
  border-radius: 0
  border-bottom: 1px solid #999
  display flex
  display -webkit-flex
  flex-wrap wrap
  -webkit-flex-wrap wrap
  justify-content space-around
  padding 0
  min-height 50px
  max-height 100px
  .navbar-brand
    font-family:  AvenirNext-Bold, Helvetica, sans-serif
    font-size: 22px
    color: #222
    text-decoration none
    &:hover
      text-decoration none
  .navbar-text
    font-family  AvenirNext-DemiBold, Helvetica, sans-serif
    color #333
    font-size 20px
    text-overflow ellipsis
    overflow hidden
    max-height 30px
  .navbar-brand:hover, .navbar-brand:focus
    color: #333
  & > *
    margin 8px 16px 0
  .nav-dropdown
    position: absolute
    top: 56px
    z-index: 999
